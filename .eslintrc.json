{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": ["meteor"],
  "extends": ["plugin:meteor/recommended"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
      "quotes": ["error", "double"],
      "semi": ["error", "always"],
      "indent": ["error", 2],
      "eol-last": ["error", "always"]
  }
}